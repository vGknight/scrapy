<div class="row">
    <div class="col-12 text-center" id="header">
        <img id="burger-img" src="./assets/img/burger.png">

        <h2 id="head-h2">Scrapy Saved</h2>
    </div>
</div>
<div class="row">
    <div class="col-6" id="burgers-uneaten">

        {{#each article}} {{#unless devoured}}
        <div class="row">
            <div class="col-8">
                <div class="card">
                    <div class="change-devoured card-body" data-id="{{this.id}}"> 

                    {{math @index "+" 1}}. {{headline}} </div>

                </div>
            </div>

            <div class="col-4 center">
                <button type="button" class="btn btn-outline-dark view-notes" data-id="{{this.id}}">
                    Article Notes
                    <i class="fa fa-cutlery" aria-hidden="true"></i>
                </button>
                  <button type="button" class="btn btn-outline-dark delete-saved-article" data-id="{{this.id}}">
                    Delete From Saved
                    <i class="fa fa-cutlery" aria-hidden="true"></i>
                </button>
            </div>
        </div>
        {{/unless}} {{/each}}
    </div>

    <div class="col-6" id="burgers-eaten">
        {{#each burger}} {{#if devoured}}
        <div class="card">
            <div class="card-body strikethrough" data-id="{{this.id}}">
                {{math @index "+" 1}}. {{burgers_name}}

            </div>
        </div>
        {{/if}} {{/each}}
    </div>
</div>
